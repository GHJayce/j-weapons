{
  "name": "j-weapons",
  "author": "GHJayce",
  "description": "J武器。一个开箱即用的函数库。提供了日常开发时所需的一些常用函数方法。",
  "keywords": [
    "javascript",
    "utils",
    "utility",
    "utilities",
    "utility-library",
    "utility-function",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GHJayce/j-weapons.git"
  },
  "bugs": {
    "url": "https://github.com/GHJayce/j-weapons/issues"
  },
  "homepage": "https://github.com/GHJayce/j-weapons#readme",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "dist/index.umd.cjs",
      "default": "dist/index.js",
      "import": "dist/index.js"
    },
    "./string": "dist/common/string.js"
  },
  "scripts": {
    "test": "jest --config=config/jest.config.ts",
    "prepare": "npm run build",
    "build": "vite build --config config/vite.config.ts && tsc --project config/tsconfig.es.build.json && tsc-alias --project config/tsconfig.es.build.json",
    "docs:serve": "docsify serve docs"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "docsify-cli": "^4.4.4",
    "eslint": "^9.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}